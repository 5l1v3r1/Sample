		// TODO Auto-generated method stub
		// ログイン画面を起動するインテントの作成.
		Intent intent = new Intent(mContext, MainActivity.class);	// intentの作成.
		
		return null;
	}

	@Override
	public Bundle confirmCredentials(AccountAuthenticatorResponse response,
